<Window
    x:Class="NewTechnology.Views.MaterialCalculatorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Тестирование расчета материалов"
    Width="500"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="18"
            FontWeight="Bold"
            Text="Тестирование метода расчета материалов" />

        <!--  Параметры для расчета  -->
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            Text="ID типа продукции:" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,0,5"
            Text="{Binding ProductTypeId}" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            Text="ID типа материала:" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,0,0,5"
            Text="{Binding MaterialTypeId}" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            Text="Требуемое количество продукции:" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,0,0,5"
            Text="{Binding RequiredProductQuantity}" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            Text="Количество на складе:" />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Margin="0,0,0,5"
            Text="{Binding ProductInStock}" />

        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            Text="Параметр продукции 1:" />
        <TextBox
            Grid.Row="5"
            Grid.Column="1"
            Margin="0,0,0,5"
            Text="{Binding Param1}" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            Text="Параметр продукции 2:" />
        <TextBox
            Grid.Row="6"
            Grid.Column="1"
            Margin="0,0,0,5"
            Text="{Binding Param2}" />

        <!--  Результат  -->
        <TextBlock
            Grid.Row="9"
            Grid.Column="0"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            Text="Результат расчета:" />
        <TextBlock
            Grid.Row="9"
            Grid.Column="1"
            Margin="0,0,0,5"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="Blue"
            Text="{Binding CalculationResult}" />

        <!--  Кнопка расчета  -->
        <Button
            Grid.Row="10"
            Grid.ColumnSpan="2"
            Width="120"
            Height="30"
            HorizontalAlignment="Center"
            Command="{Binding CalculateCommand}"
            Content="Выполнить расчет" />
    </Grid>
</Window>