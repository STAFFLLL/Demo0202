<Window
    x:Class="NewTechnology.Views.AddNewAppWidnow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NewTechnology.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding WindowTitle}"
    Width="900"
    Height="550"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Text="{Binding WindowTitle}" />

        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,0"
            Orientation="Horizontal">
            <TextBlock
                Width="80"
                VerticalAlignment="Center"
                Text="Партнер:" />
            <ComboBox
                Width="300"
                DisplayMemberPath="Name"
                IsSynchronizedWithCurrentItem="True"
                ItemsSource="{Binding ListPartners}"
                SelectedItem="{Binding SelectedPartner}" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Margin="0,10,0,0"
            Orientation="Horizontal">
            <TextBlock
                Width="80"
                VerticalAlignment="Center"
                Text="Дата:" />
            <DatePicker Width="150" SelectedDate="{Binding SelectedDate}" />
        </StackPanel>

        <StackPanel
            Grid.Row="3"
            Margin="0,10,0,0"
            Orientation="Horizontal">
            <Button
                Width="120"
                Height="30"
                Margin="0,0,10,0"
                Command="{Binding AddNewProductCommand}"
                Content="Добавить продукт" />
            <TextBlock
                Margin="20,0,5,0"
                VerticalAlignment="Center"
                Text="Общая стоимость:" />
            <TextBlock
                VerticalAlignment="Center"
                FontWeight="Bold"
                Foreground="Green"
                Text="{Binding TotalCost, StringFormat={}{0:N2} руб.}" />
        </StackPanel>

        <DataGrid
            Grid.Row="4"
            Height="250"
            Margin="0,10,0,0"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ItemsSource="{Binding AddProducts}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding Product.Name}"
                    Header="Продукт" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding Product.TypeProducts.Name}"
                    Header="Тип" />
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding Product.MinPriceForPartner, StringFormat={}{0:N2}}"
                    Header="Цена за единицу" />
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding Quantity}"
                    Header="Количество">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="{Binding Quantity}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding TotalPrice, StringFormat={}{0:N2}}"
                    Header="Сумма" />
                <DataGridTemplateColumn Width="1*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Width="60"
                                Background="LightCoral"
                                Command="{Binding DataContext.RemoveProductCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}"
                                Content="Удалить" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="5"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Height="30"
                Margin="0,0,10,0"
                Background="LightGreen"
                Command="{Binding SaveApplicationCommand}"
                Content="{Binding WindowTitle}" />
            <Button
                Width="80"
                Height="30"
                Click="CancelButton_Click"
                Content="Отмена" />
        </StackPanel>
    </Grid>
</Window>